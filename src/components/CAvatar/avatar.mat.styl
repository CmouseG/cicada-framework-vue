.c-avatar::after
    display block
    content ' '
    height 70px

.c-avatar-canvas
    position absolute
    top 0
    left 0
    width 100%
    height 100px

.c-avatar-img
    position relative
    top 40px
    width 120px
    height 120px
    & img
        width 100%
        height 100%
        position relative
        border-radius 50%
    /.with-layout-side-opened &::before,
    /.with-layout-side-opened &::after
        animation pulse 2s linear infinite;
        border #ffffff solid 4px
        border-radius 50%
        content ' '
        height 140%
        left -20%
        opacity .6
        position absolute
        top -20%
        transform scale(0.714)
        width 140%
    /.with-layout-side-opened &::after
        animation-delay 1.2s

